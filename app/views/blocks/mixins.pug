mixin Btn(text, type, classCustom,icon="fa-light fa-arrow-right icon")
    if(!classCustom)
        if(type == "button")
            button.btn(type="submit",class=classCustom)
                span.inner #{text}
                i(class=icon)
        else
            a.btn(href="",class=classCustom)
                span.inner #{text}
                i(class=icon)
    else 
        if(type == "button")
            button.btn(type="submit",class=classCustom)
                span.inner #{text}
                i(class=icon)
        else
            a.btn(href="", class=classCustom)
                span.inner #{text}
                i(class=icon)
mixin PageNumber 
    ul.page-numbers
        li 
            a.prev.page-numbers(href="")
                i.fa.fa-angle-left
        li
            span.page-numbers.current   
                | 1
        li
            a.page-numbers(href="")   
                | 2
        li 
            span.page-numbers.dot 
                |...
        li
            a.page-numbers(href="")   
                | 10
        li 
            a.next.page-numbers(href="")
                i.fa.fa-angle-right
mixin breadCrumb(arr)
  .breadcrumb 
      ul.breadcrumb-list
         li.breadcrumb-item(data-aos="fade-right")
            a.breadcrumb-link(href="")
               | Trang chá»§
         each txt in arr
            li.breadcrumb-item(data-aos="fade-right")
               a.breadcrumb-link(href="") #{txt}
mixin pagination(classCustom)
    .swiper-pagination(class=classCustom)

mixin CountDown(time,customClass)
    .cdw(data-time= time, class= customClass)
      .cdw-list 
          .cdw-item(style="display: none")
              .cdw-inner 
                  .number.date
          .cdw-item 
              .cdw-inner 
                  .number.hour
          .cdw-item 
              .cdw-inner 
                  .number.minute
          .cdw-item 
              .cdw-inner 
                  .number.second
mixin SwiperControl(customClass)
    .swiper-control(class= customClass) 
      .swiper-control-btn.swiper-prev 
          i.fa-light.fa-arrow-left
      .swiper-control-btn.swiper-next 
          i.fa-light.fa-arrow-right
mixin Swiper(customClass)
   .swiper-container 
      .swiper.rows 
         .swiper-wrapper 
            block
mixin img(name)
  img(src="./assets/images/" + name, alt="")
mixin popup(classCustom="",id="")
   .popup(data-popup-id= id)
      .popup-overlay
      .popup-main
         .popup-main-wrapper(class=classCustom)
            .popup-over
               .popup-wrapper
                  block
         .popup-close
            i.fas.fa-times.icon
mixin title(text,tag,classCustom)
   if(!tag)
      .head(class=classCustom)
         h2.t-title 
            | #{text}
   else 
      .head(class=classCustom)
         span.b-tag 
            | #{tag}
         h2.t-title 
            | #{text}