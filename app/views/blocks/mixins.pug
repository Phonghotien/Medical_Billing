mixin SwiperControl(customClass)
    .swiper-control(class= customClass) 
      .swiper-control-btn.swiper-prev 
          i.fa-light.fa-arrow-left
      .swiper-control-btn.swiper-next 
          i.fa-light.fa-arrow-right
mixin Swiper(customClass)
   .swiper-container 
      .swiper.rows 
         .swiper-wrapper 
            block
