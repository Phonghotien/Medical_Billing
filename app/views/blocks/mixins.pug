mixin CountDown(time,customClass)
    .cdw(data-time= time, class= customClass)
      .cdw-list 
          .cdw-item(style="display: none")
              .cdw-inner 
                  .number.date
          .cdw-item 
              .cdw-inner 
                  .number.hour
          .cdw-item 
              .cdw-inner 
                  .number.minute
          .cdw-item 
              .cdw-inner 
                  .number.second
